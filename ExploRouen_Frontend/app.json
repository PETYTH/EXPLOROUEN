{
  "expo": {
    "name": "ExploRouen",
    "slug": "explorouen",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "explorouen",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/vieux-marche.jpg",
      "resizeMode": "cover",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Cette application utilise votre position pour vous montrer les monuments et activités à proximité.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Cette application utilise votre position pour vous montrer les monuments et activités à proximité."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/ExploRouen.png",
      "name": "ExploRouen - Découvrez Rouen",
      "shortName": "ExploRouen",
      "lang": "fr",
      "scope": "/",
      "themeColor": "#8B5CF6",
      "backgroundColor": "#8B5CF6",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": ".",
      "preferRelatedApplications": false,
      "splash": {
        "image": "./assets/images/vieux-marche.jpg",
        "resizeMode": "cover",
        "backgroundColor": "#8B5CF6"
      }
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      "expo-location",
      "expo-camera"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}